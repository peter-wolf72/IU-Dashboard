@startuml DashboardUML
!define DARKBLUE
!include style.plantuml
hide circle
skinparam classAttributeIconSize 0

' Basisklasse
class Student {
    -student_id: str
    -name: str
    -start_date: date

    ' Fachliche Methoden (keine Getter/Setter)
    +get_earned_ects(): int
    +get_average_grade(): float
    +get_cp_pace_per_month(): float
    +is_on_track(duration_months: int): bool
}

' Allgemeines Modul (Stammdaten)
class Module {
    -module_id: str
    -title: str
    -ects: int
}

' Assoziationsklasse / Belegung: verbindet Student und Module
class Enrollment {
    -grade: float
    -date_passed: date
}

together {
    class Goal {
        -goal_type: GoalType
        -target_value: float
        -adjustable: bool
        -duration_months: int

        ' Optional, wenn du Logik eher am Goal zeigen willst:
        +is_reached(student: Student): bool
    }

    enum GoalType {
        deadline
        grade_avg
        cp_pace
    }
}

' Beziehungen
Student "1" -- "0..*" Enrollment
Module  "1" -- "0..*" Enrollment

Student "1" -- "1..*" Goal : has

@enduml
